{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["../../node_modules/*", "./node_modules/*", "*"]
    },
    "rootDirs": ["src"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
