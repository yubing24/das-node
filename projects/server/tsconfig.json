{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "ES2020",
    "noEmit": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["../../node_modules/*", "*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["../../node_modules/@types/jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
