{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["../../node_modules/*", "./node_modules/*", "*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["../../node_modules/@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
